<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/cd_background">

	<ImageView
		android:src="@drawable/desconhecido"
		android:layout_width="130dp"
		android:layout_height="130dp"
		android:id="@+id/connecteddeviceImageView1"
		android:layout_centerHorizontal="true"
		android:layout_centerInParent="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Launchpad"
		android:layout_below="@id/connecteddeviceImageView1"
		android:layout_centerHorizontal="true"
		android:textSize="24sp"
		android:id="@+id/connecteddevice_launchpad_name"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Novation"
		android:layout_below="@id/connecteddevice_launchpad_name"
		android:layout_centerHorizontal="true"
		android:textSize="18sp"
		android:id="@+id/connecteddevice_vendor"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:background="#33000000"
		android:textColor="#A5A5A5"
		android:textSize="14sp"
		android:text="@string/done"
		android:id="@+id/connecteddevice_accept"/>

</RelativeLayout>

