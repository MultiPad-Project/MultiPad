<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center|center_horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/skinthemelogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/skinthemeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinthemelogo"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
		android:textColor="@color/primary_text_default_material_dark" />

    <TextView
        android:id="@+id/skinthemeVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinthemeName"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
		android:textColor="@color/secondary_text_material_dark" />

</RelativeLayout>