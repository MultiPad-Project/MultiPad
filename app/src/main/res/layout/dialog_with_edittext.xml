<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_dark" >

    <TextView
        android:id="@+id/dwe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/primary_text_default_material_dark"
        android:textSize="18dp" />
		
	<EditText
		android:id="@+id/dwe_editText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/dwe_title"
		android:textColor="@color/secondary_text_material_dark" />

    <Button
        android:id="@+id/dwe_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dwe_editText"
        android:backgroundTint="#00000000"
        android:textColor="@color/secondary_text_material_dark"
        android:textSize="14dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/dwe_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dwe_editText"
        android:layout_toRightOf="@id/dwe_btn1"
        android:backgroundTint="#00000000"
        android:textColor="@color/secondary_text_material_dark"
        android:textSize="14dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/dwe_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dwe_editText"
        android:layout_toRightOf="@id/dwe_btn2"
        android:backgroundTint="#00000000"
        android:textColor="@color/secondary_text_material_dark"
        android:textSize="14dp"
        android:visibility="gone" />

    

</RelativeLayout>