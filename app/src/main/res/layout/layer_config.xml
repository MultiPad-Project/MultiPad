<merge xmlns:android="http://schemas.android.com/apk/res/android"
>

  <Button
    android:id="@+id/layer_cfg_exit"
    android:layout_width="26dp"
    android:layout_height="26dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_margin="0dp"
    android:background="@drawable/oval_exit_float_window"
    android:gravity="center_vertical|center|center_horizontal"
    android:padding="0dp"
    android:text="X" />

  <RelativeLayout
    android:id="@+id/layer_cfg_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:background="@color/background_material_dark"
    android:padding="6dp">

    <TextView
      android:id="@+id/layer_cfg_size"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:digits="0123456789."
      android:inputType="number"
      android:text="@string/layer_cfg_size"
      android:textColor="@color/primary_text_default_material_dark"
      android:textSize="16sp" />

    <Button
      android:id="@+id/layer_cfg_s_minus"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_below="@id/layer_cfg_size"
      android:background="@android:color/transparent"
      android:text="—"
      android:textColor="#ffffffff" />

    <Button
      android:id="@+id/layer_cfg_s_plus"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_alignParentRight="true"
      android:layout_below="@id/layer_cfg_size"
      android:background="@android:color/transparent"
      android:text="+"
      android:textColor="#ffffffff" />

    <EditText
      android:id="@+id/layer_cfg_edit_size_w"
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:layout_below="@id/layer_cfg_size"
      android:layout_toLeftOf="@id/layer_cfg_s_plus"
      android:layout_toRightOf="@id/layer_cfg_s_minus"
      android:background="#22aaaaaa"
      android:digits="0123456789."
      android:ems="10"
      android:inputType="numberDecimal"
      android:lines="1"
      android:textColor="@color/secondary_text_material_dark" 
      android:visibility="gone"/>
    
    <EditText
      android:id="@+id/layer_cfg_edit_size_h"
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:layout_below="@id/layer_cfg_size"
      android:layout_toLeftOf="@id/layer_cfg_s_plus"
      android:layout_toRightOf="@id/layer_cfg_s_minus"
      android:background="#22aaaaaa"
      android:digits="0123456789."
      android:ems="10"
      android:inputType="numberDecimal"
      android:lines="1"
      android:textColor="@color/secondary_text_material_dark" />

    <TextView
      android:id="@+id/pads_cfg_size"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/layer_cfg_edit_size_h"
      android:text="@string/pads_cfg_size"
      android:textColor="@color/primary_text_default_material_dark"
      android:textSize="16sp" />

    <Button
      android:id="@+id/pads_cfg_s_minus"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_below="@id/pads_cfg_size"
      android:background="@android:color/transparent"
      android:text="—"
      android:textColor="#ffffffff" />

    <Button
      android:id="@+id/pads_cfg_s_plus"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_alignParentRight="true"
      android:layout_below="@id/pads_cfg_size"
      android:background="@android:color/transparent"
      android:text="+"
      android:textColor="#ffffffff" />

    <EditText
      android:id="@+id/pads_cfg_edit_size"
      android:layout_width="match_parent"
      android:layout_height="32dp"
      android:layout_below="@id/pads_cfg_size"
      android:layout_toLeftOf="@id/pads_cfg_s_plus"
      android:layout_toRightOf="@id/pads_cfg_s_minus"
      android:background="#22aaaaaa"
      android:digits="0123456789"
      android:ems="10"
      android:inputType="numberDecimal"
      android:lines="1"
      android:textColor="@color/secondary_text_material_dark" />

  </RelativeLayout>

  <Button
    android:id="@+id/layer_cfg_changecfgs"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_below="@id/layer_cfg_background"
    android:layout_marginRight="6dp"
    android:background="#ff6100f5"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:text="@string/change"
    android:textSize="14dp" />

</merge>
