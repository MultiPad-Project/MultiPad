<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                android:id="@+id/main_floating_item_useunipadfolder"
                android:background="@drawable/inter_main_floating_item"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp" >

        <TextView
                android:id="@+id/main_floating_item_useunipadfolder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/use_unipad_folder"
                android:textColor="@color/primary_text_default_material_dark"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/main_floating_item_useunipadfolder_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/main_floating_item_useunipadfolder_title"
                android:text="@string/use_unipad_folder_subtitle"
                android:textColor="@color/secondary_text_material_dark"
                android:textSize="12dp" />

        <CheckBox
                android:id="@+id/main_floating_menu_useunipadfolder_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:typeface="monospace" />

</RelativeLayout>